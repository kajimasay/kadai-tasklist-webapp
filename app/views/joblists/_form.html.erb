<%= form_for(joblist) do |f| %>
  <% if joblist.errors.any? %>
    <div id="error_explanation">
      
      <h2><%= joblist.errors.count %>件のエラーがあります。</h2>
      
      <ul>
        <% joblist.errors.full_messages.each do |joblist| %>
          <li><%= joblist %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスクリスト' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.submit '投稿' %>
  
<% end %>


<% if logged_in? %>
<h1>メッセージ一覧</h1>
  <div class="row">

    <ul>
      <% @joblists.each do |joblist| %>
        <li><%= link_to joblist.id, joblist %> : 
        <%= joblist.content %> &gt;
        <%= joblist.status %></li>
      <% end %>
    </ul>
    
    <%= paginate @joblists %>
    
    <%= link_to '新規タスクリストの投稿', new_joblist_path %>

</div>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Tasklists</h1>
     <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>


